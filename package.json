{
  "name": "elastic-rule-intelligence-platform",
  "version": "1.0.0",
  "description": "Comprehensive platform for intelligent Elastic Security rule recommendations",
  "private": true,
  "workspaces": [
    "frontend",
    "backend",
    "sync-service"
  ],
  "scripts": {
    "install:all": "npm install && npm run install:frontend && npm run install:backend && npm run install:sync",
    "install:frontend": "cd frontend && npm install",
    "install:backend": "cd backend && npm install", 
    "install:sync": "cd sync-service && npm install",
    "dev": "docker-compose up",
    "dev:build": "docker-compose up --build",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "dev:sync": "cd sync-service && npm run dev",
    "build": "npm run build:frontend && npm run build:backend && npm run build:sync",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "build:sync": "cd sync-service && npm run build",
    "test": "npm run test:frontend && npm run test:backend && npm run test:sync",
    "test:frontend": "cd frontend && npm test",
    "test:backend": "cd backend && npm test",
    "test:sync": "cd sync-service && npm test",
    "test:integration": "jest --config jest.integration.config.js",
    "coverage": "npm run test:frontend -- --coverage && npm run test:backend -- --coverage",
    "lint": "npm run lint:frontend && npm run lint:backend && npm run lint:sync",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:backend": "cd backend && npm run lint",
    "lint:sync": "cd sync-service && npm run lint",
    "lint:fix": "npm run lint:frontend -- --fix && npm run lint:backend -- --fix && npm run lint:sync -- --fix",
    "type-check": "npm run type-check:frontend && npm run type-check:backend && npm run type-check:sync",
    "type-check:frontend": "cd frontend && npm run type-check",
    "type-check:backend": "cd backend && npm run type-check",
    "type-check:sync": "cd sync-service && npm run type-check",
    "clean": "npm run clean:frontend && npm run clean:backend && npm run clean:sync && docker-compose down -v",
    "clean:frontend": "cd frontend && rm -rf build node_modules",
    "clean:backend": "cd backend && rm -rf dist node_modules",
    "clean:sync": "cd sync-service && rm -rf dist node_modules",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:restart": "docker-compose restart",
    "setup": "npm run install:all && cp .env.example .env && echo 'Please update .env with your configuration values'",
    "start:prod": "docker-compose -f docker-compose.prod.yml up -d",
    "docs:serve": "cd docs && npm run serve",
    "release": "standard-version",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "standard-version": "^9.5.0",
    "typescript": "^5.4.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/elastic-rule-intelligence.git"
  },
  "keywords": [
    "elasticsearch",
    "security",
    "detection-rules",
    "typescript",
    "react",
    "node",
    "docker"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,yml,yaml,md}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run type-check && npm test"
    }
  }
}