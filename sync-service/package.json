{
  "name": "elastic-rule-intelligence-sync-service",
  "version": "1.0.0",
  "description": "GitHub synchronisation service for Elastic detection rules",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon --exec ts-node --files src/index.ts",
    "dev:debug": "nodemon --exec \"node --inspect=0.0.0.0:9230 -r ts-node/register --files src/index.ts\"",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts,.js",
    "lint:fix": "eslint src --ext .ts,.js --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "clean": "rm -rf dist",
    "sync:manual": "ts-node src/scripts/manual-sync.ts",
    "validate:rules": "ts-node src/scripts/validate-rules.ts",
    "docs": "typedoc src --out docs --excludePrivate"
  },
  "dependencies": {
    "@elastic/elasticsearch": "^8.11.3",
    "@octokit/rest": "^20.0.2",
    "@octokit/webhooks": "^12.0.10",
    "axios": "^1.6.7",
    "crypto": "^1.0.1",
    "dotenv": "^16.4.5",
    "express": "^4.18.3",
    "helmet": "^7.1.0",
    "joi": "^17.12.2",
    "lodash": "^4.17.21",
    "moment": "^2.30.1",
    "node-cron": "^3.0.3",
    "redis": "^4.6.13",
    "toml": "^3.0.0",
    "uuid": "^9.0.1",
    "winston": "^3.12.0",
    "yaml": "^2.4.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/lodash": "^4.17.0",
    "@types/node": "^20.11.25",
    "@types/node-cron": "^3.0.11",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typedoc": "^0.25.12",
    "typescript": "^5.4.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": ["<rootDir>/src", "<rootDir>/tests"],
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/index.ts",
      "!src/types/**/*.ts",
      "!src/scripts/**/*.ts"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"],
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.ts"]
  },
  "nodemonConfig": {
    "watch": ["src"],
    "ext": "ts,json",
    "ignore": ["src/**/*.spec.ts", "src/**/*.test.ts"],
    "exec": "ts-node --files src/index.ts"
  }
}